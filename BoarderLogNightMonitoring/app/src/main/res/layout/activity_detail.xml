<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.binus.boarderlognightmonitoring.DetailActivity">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/popTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popTitle"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.499" />

    <TextView
        android:id="@+id/popNIM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NIM"
        app:layout_constraintLeft_toRightOf="@+id/imgPhoto"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/popTitle" />

    <TextView
        android:id="@+id/popName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="NAME"
        app:layout_constraintLeft_toRightOf="@+id/imgPhoto"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/popNIM" />

    <TextView
        android:id="@+id/popCheckIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="CHECKOUT"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/popCheckOut"
        app:layout_constraintLeft_toRightOf="@+id/imgPhoto"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/popCheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="CHECKIN"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/popName"
        app:layout_constraintLeft_toRightOf="@+id/imgPhoto"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/popReasonTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/popReasonTitle"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/popCheckIn"
        app:layout_constraintLeft_toRightOf="@+id/imgPhoto"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/popReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="REASON"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/popReasonTitle"
        app:layout_constraintLeft_toRightOf="@+id/imgPhoto"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
